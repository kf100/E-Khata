    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Transaction</h1>
        
      </div>
      <table>
        <tr>
          <td><h5>Name</h5></td>
          <td><h5>:<%= name %></h5></td>
        </tr>
        <tr>
          <td><h5>Users Name</h5></td>
          <td><h5>:<%= username %></h5></td>
        </tr>
        <tr>
          <td><h5>User ID</h5></td>
          <td><h5>:<%= cid %></h5></td>
        </tr>
      </table>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Transaction ID</th>

              <th scope="col">Date</th>
              <th scope="col">Debited</th>
              <th scope="col">Credited</th>
              <th scope="col">Comment</th>
              <!-- <th scope="col">Header</th> -->
            </tr>
          </thead>
          <tbody>
            <% if(data.length>0) {
            arr=data.reverse();
            arr.forEach(function(no){ %>
            <tr>
              <td><%= no.transaction_id %></td>
              <% var d=new Date(no.date);
              var dt=d.toLocaleString("en-IN");%>
              <td><%= dt %></td>
              
              <% if(no.debited===0){ %>
              <td>--</td>
              <% }else{ %>
              <td style="color: #FF0000;"><%= no.debited %></td>
              <% } %>
              
              <% if(no.credited===0){ %>
              <td>--</td>
              <% }else{ %>
              <td style="color:#0FD800"><%= no.credited %></td>
              <% } %>

              <% if(no.comment===""){ %>
              <td>--</td>
              <% }else{ %>
              <td><%= no.comment %></td>
              <% } %>

         <% })}else{ %>
         <td></td>
         <td></td>
         <td align="center">No Transaction So Far</td>
         <td></td>
         <td></td>
          <% } %>
          </tbody>
        </table>
      </div>
    </main>
